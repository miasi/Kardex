<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_menues" tools:context="com.example.isaimrafael.kardexv11.Menues">

    <TextView
        android:id="@+id/formato1"
        android:text="NOMBRE"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- NOMBRE -->
    <TextView
        android:id="@+id/MENUnombreAlumno"
        android:layout_below="@id/formato1"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/formato2"
        android:layout_below="@id/MENUnombreAlumno"
        android:text="ESPECIALIDAD"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- ESPECIALIDAD -->
    <TextView
        android:id="@+id/MENUnombreCarrera"
        android:layout_below="@id/formato2"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/formato3"
        android:layout_below="@id/MENUnombreCarrera"
        android:text="SEMESTRE"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- SEMESTRE -->
    <TextView
        android:id="@+id/MENUnombreSemestre"
        android:layout_below="@id/formato3"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/formato4"
        android:layout_below="@id/MENUnombreSemestre"
        android:text="CREDITOS ACUMULADOS"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- CREDITOS -->
    <TextView
        android:id="@+id/MENUCreditos"
        android:layout_below="@id/formato4"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/formato5"
        android:layout_below="@id/MENUCreditos"
        android:text="MODULO"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> <!-- MODULO -->
    <TextView
        android:id="@+id/MENUModulo"
        android:layout_below="@id/formato5"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
</RelativeLayout>
